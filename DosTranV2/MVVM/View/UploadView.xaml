        <Grid Grid.Row="2" AllowDrop="True" Drop="FileSelect_Drop" DragOver="FileSelect_DragOver">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="53*"/>
                <ColumnDefinition Width="97*"/>
            </Grid.ColumnDefinitions>
            <StackPanel  VerticalAlignment="Center" Grid.ColumnSpan="2">
                <Rectangle
                    Fill="WhiteSmoke"
                    RadiusX="10"
                    RadiusY="10"
                    StrokeDashArray="5"
                    StrokeThickness="2"
                    StrokeDashCap="Round"
                    Stroke="Silver"
                    Height="150"
                    Margin="10 5 10 5"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="2">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="Aktarılacak Dosyayı Sürükleyin" FontSize="14" Foreground="#444" Width="100"/>
                <Button Width="70" Height="30" Content="Dosya Seç" Style="{StaticResource PrimaryButtonStyle}" Margin="0 10 0 0" Click="FileSelect_Click"/>
                <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding FileName, Mode=TwoWay}" FontSize="10" Foreground="#444" Width="232" Margin="0 5 0 0"/>
            </StackPanel>
        </Grid>
        <Border BorderThickness="1" BorderBrush="LightGray" Grid.Row="3" Margin="10 0 10 0" Padding="0 2 0 2">
            <StackPanel>
                <Label Content="Host Dosya İsmi : " HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
                <TextBox Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5 0 5 5" Text="{Binding DataSet}"/>
            </StackPanel>
            <!--<Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>-->

            <!--</Grid>-->
        </Border>
        <DockPanel Grid.Row="4">
            <Button Width="120" Height="30" Content="Aktar" Style="{StaticResource PrimaryButtonStyle}" Margin="10 10 0 10" Command="{Binding FTPUpload}" CommandParameter="{Binding ElementName=UserComponent}"/>
            <!--<Button Width="70" Height="30" Content="Çıkış" Style="{StaticResource PrimaryButtonStyle}" Margin="0 0 10 10" HorizontalAlignment="Right"/>-->
        </DockPanel>
