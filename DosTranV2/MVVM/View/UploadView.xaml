             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DosTranV2.MVVM.View"
             xmlns:view="clr-namespace:DosTranV2.MVVM.View"
             xmlns:viewModel="clr-namespace:DosTranV2.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300" Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <view:UserView x:Name="UserComponent" DataContext="{Binding UserModel}"/>
